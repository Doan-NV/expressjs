doctype html
head
  meta(charset='utf-8')
  title Login
  link(rel='stylesheet', href='../styles/login.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js', charset='utf-8')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6', crossorigin='anonymous')


form.login-form(action='../admin/login' method='POST')
  h1 Login
  if errors
    each error in errors 
      .alert.alert-danger= error
  .txtb
    input(type='text' name='username' value=value? value.name: "")
    span(data-placeholder='Username')
  .txtb
    input(type='password' name='password')
    span(data-placeholder='Password')
  input.logbtn(type='submit', value='Login')
  .bottom-text
    | Don&apos;t have account? 
    a(href='#') Sign up
script(type='text/javascript').
  $(".txtb input").on("focus",function(){
  $(this).addClass("focus");
  });
  $(".txtb input").on("blur",function(){
  if($(this).val() == "")
  $(this).removeClass("focus");
  });
